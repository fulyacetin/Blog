@model IList<BlogOdev.Core.Objects.Author>
<div class="sidebar">
    <h3>Yazarlar</h3>
    @if (Model.Count > 0)
    {
        <ul>
            @foreach (var author in Model)
            {
                <li>@Html.AuthorLink(author.Name)</li>
            }
        </ul>
    }
    else
    {
        <p>Hiçbir yazar bulunamadı!</p>
    }
</div>